# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Language Property and POST Query - Simple

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255 IPv4 -experimental

--SHELL--

#
# 01. POST /ngsi-ld/v1/entities with a language property L
# 02. See the entity in the database
# 03. POST Query to get entities in Normalized form
# 04. POST Query to get entities in Concise form
# 05. POST Query to get entities in Simplified form
# 06. POST Query to get entities in Normalized form and lang=en
# 07. POST Query to get entities in Concise form and lang=en
# 08. POST Query to get entities in Simplified form and lang=en
# 09. POST Query to get entities in Normalized form and lang=ex - get en
# 10. POST Query to get entities in Simplified form and lang=sv
# 11. POST Query to get entities with q=L[es]==ele - see E1
# 12. POST Query to get entities with q=L[es]==elk - see nothing
#

echo "01. POST /ngsi-ld/v1/entities with a language property L"
echo "========================================================"
payload='{
  "id": "urn:ngsi-ld:T:E1",
  "type": "T",
  "L": {
    "type": "LanguageProperty",
    "languageMap": {
      "en": "el",
      "es": "ele",
      "sv": "ell"
    },
    "observedAt": "2022-04-01T18:07:00.987Z",
    "Sub-P": 1,
    "Sub-R": { "object": "urn:E2" }
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload"
echo
echo


echo "02. See the entity in the database"
echo "=================================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "03. POST Query to get entities in Normalized form"
echo "================================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ]
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query --payload "$payload"
echo
echo


echo "04. POST Query to get entities in Concise form"
echo "=============================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ]
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query?options=concise --payload "$payload"
echo
echo


echo "05. POST Query to get entities in Simplified form"
echo "================================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ]
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query?options=simplified --payload "$payload"
echo
echo


echo "06. POST Query to get entities in Normalized form and lang=en"
echo "============================================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ],
  "lang": "en"
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query --payload "$payload"
echo
echo


echo "07. POST Query to get entities in Concise form and lang=en"
echo "=========================================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ],
  "lang": "en"
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query?options=concise --payload "$payload"
echo
echo


echo "08. POST Query to get entities in Simplified form and lang=en"
echo "============================================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ],
  "lang": "en"
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query?options=simplified --payload "$payload"
echo
echo


echo "09. POST Query to get entities in Normalized form and lang=ex - get en"
echo "======================================================================"
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ],
  "lang": "ex"
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query --payload "$payload"
echo
echo


echo "10. POST Query to get entities in Simplified form and lang=sv"
echo "============================================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ],
  "lang": "sv"
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query?options=simplified --payload "$payload"
echo
echo


echo "11. POST Query to get entities with q=L[es]==ele - see E1"
echo "========================================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ],
  "q": "L[es]==%22ele%22"
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query --payload "$payload"
echo
echo


echo "12. POST Query to get entities with q=L[es]==elk - see nothing"
echo "=============================================================="
payload='{
  "type": "Query",
  "entities": [
    {
      "type": "T"
    }
  ],
  "q": "L[es]==%22elk%22"
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query --payload "$payload"
echo
echo


