	"_id" : {
		"id" : "urn:ngsi-ld:WeatherObserved:BMP180:22828",
		"type" : "https://uri.fiware.org/ns/data-models#WeatherObserved",
		"servicePath" : "/"
	},
	"attrNames" : [
		"https://uri.fiware.org/ns/data-models#dataProvider"
	],
	"attrs" : {
		"https://uri=fiware=org/ns/data-models#dataProvider" : {
			"type" : "Property",
			"creDate" : REGEX(.*),
			"modDate" : REGEX(.*),
			"value" : "sensor.community",
			"mdNames" : [ ]
		}
	},
	"creDate" : REGEX(.*),
	"modDate" : REGEX(.*),
	"lastCorrelator" : ""
}
bye


--TEARDOWN--
brokerStop CB
dbDrop CB smartmaas001
