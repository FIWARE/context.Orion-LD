# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
New Batch Upsert with a subscription

--SHELL-INIT--
dbInit CB
dbDrop orionld
orionldStart CB -experimental
accumulatorStart --pretty-print 127.0.0.1 ${LISTENER_PORT}

--SHELL--

#
# 01. Create a subscription for all entities of type T
# 02. Upsert 3 entities (Create) of type T
# 03. Dump Accumulator - see the 3 entities
#

echo "01. Create a subscription for all entities of type T"
echo "===================================================="
payload='{
  "id": "urn:ngsi-ld:subscriptions:S1",
  "type": "Subscription",
  "entities": [
    {
      "type": "T"
    }
  ],
  "notification": {
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "02. Upsert 3 entities (Create) of type T"
echo "========================================"
payload='[
  { "id": "urn:ngsi-ld:T:E1", "type": "T", "P1": { "value": 1, "unitCode": "CEL" } },
  { "id": "urn:ngsi-ld:T:E2", "type": "T", "P1": { "value": 2, "unitCode": "CEL" } },
  { "id": "urn:ngsi-ld:T:E3", "type": "T", "P1": { "value": 3, "unitCode": "CEL", "P1_P1": 25, "P1_R1": {"object": "urn:ngsi-ld:T:E1"} } }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/upsert --payload "$payload" --out application/ld+json
echo
echo


echo "03. Dump Accumulator - see the 3 entities"
echo "========================================="
accumulatorDump
accumulatorReset
echo
echo


--REGEXPECT--
01. Create a subscription for all entities of type T
====================================================
HTTP/1.1 201 Created
Content-Length: 0
Date: REGEX(.*)
Location: /ngsi-ld/v1/subscriptions/urn:ngsi-ld:subscriptions:S1



02. Upsert 3 entities (Create) of type T
========================================
HTTP/1.1 201 Created
Content-Length: 58
Content-Type: application/json
Date: REGEX(.*)

[
    "urn:ngsi-ld:T:E1",
    "urn:ngsi-ld:T:E2",
    "urn:ngsi-ld:T:E3"
]


03. Dump Accumulator - see the 3 entities
=========================================
POST http://REGEX(.*)/notify?subscriptionId=urn:ngsi-ld:subscriptions:S1
Content-Length: 555
User-Agent: orionld/REGEX(.*)
Host: REGEX(.*)
Accept: application/json
Content-Type: application/json
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"
Ngsild-Attribute-Format: Normalized

{
    "data": [
        {
            "P1": {
                "type": "Property",
                "unitCode": "CEL",
                "value": 1
            },
            "id": "urn:ngsi-ld:T:E1",
            "type": "T"
        },
        {
            "P1": {
                "type": "Property",
                "unitCode": "CEL",
                "value": 2
            },
            "id": "urn:ngsi-ld:T:E2",
            "type": "T"
        },
        {
            "P1": {
                "P1_P1": {
                    "type": "Property",
                    "value": 25
                },
                "P1_R1": {
                    "object": "urn:ngsi-ld:T:E1",
                    "type": "Relationship"
                },
                "type": "Property",
                "unitCode": "CEL",
                "value": 3
            },
            "id": "urn:ngsi-ld:T:E3",
            "type": "T"
        }
    ],
    "id": "urn:ngsi-ld:Notification:REGEX(.*)",
    "notifiedAt": "202REGEX(.*)",
    "subscriptionId": "urn:ngsi-ld:subscriptions:S1",
    "type": "Notification"
}
=======================================


--TEARDOWN--
brokerStop CB
accumulatorStop
dbDrop CB
