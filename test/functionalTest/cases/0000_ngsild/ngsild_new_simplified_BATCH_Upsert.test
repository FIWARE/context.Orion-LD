--NAME--
BATCH Upsert with Simplified Format

--SHELL-INIT--
#Colpied from ngsild_simplified_BATCH_Upsert.test
dbInit CB
orionldStart CB -experimental

--SHELL--

#
# 01. Create 3 entities with attributes of all types, and sub-attrs of all types, using Simplified format and BATCH Upsert
# 02. GET the three entities
# 03. See one of the entities in mongo
# 04. BATCH Upsert on existing entity urn:ngsi-ld:entities:E1
# 05. GET urn:ngsi-ld:entities:E1 and see the change in step 04 (replaced)
#

echo "01. Create 3 entities with attributes of all types, and sub-attrs of all types, using Simplified format and BATCH Upsert"
echo "========================================================================================================================"
payload='[
  {
    "id": "urn:ngsi-ld:entities:E1",
    "type": "T",
    "String": "String",
    "Int": 1,
    "Float": 3.14,
    "Bool": "true",
    "Geo": { "type": "Point", "coordinates": [ 1, 2 ] },
    "Array": [ 5, 6 ],
    "Rel": { "object": "urn:ngsi-ld:entities:E2" },
    "Sub": {
      "value": 6,
      "String": "String",
      "Int": 1,
      "Float": 3.14,
      "Bool": "true",
      "Geo": { "type": "Point", "coordinates": [ 1, 2 ] },
      "Array": [ 5, 6 ],
      "Rel": { "object": "urn:ngsi-ld:entities:E2" }
    }
  },
  {
    "id": "urn:ngsi-ld:entities:E2",
    "type": "T",
    "String": "String",
    "Int": 1,
    "Float": 3.14,
    "Bool": "true",
    "Geo": { "type": "Point", "coordinates": [ 1, 2 ] },
    "Array": [ 5, 6 ],
    "Rel": { "object": "urn:ngsi-ld:entities:E2" },
    "Sub": {
      "value": 6,
      "String": "String",
      "Int": 1,
      "Float": 3.14,
      "Bool": "true",
      "Geo": { "type": "Point", "coordinates": [ 1, 2 ] },
      "Array": [ 5, 6 ],
      "Rel": { "object": "urn:ngsi-ld:entities:E2" }
    }
  },
  {
    "id": "urn:ngsi-ld:entities:E3",
    "type": "T",
    "String": "String",
    "Int": 1,
    "Float": 3.14,
    "Bool": "true",
    "Geo": { "type": "Point", "coordinates": [ 1, 2 ] },
    "Array": [ 5, 6 ],
    "Rel": { "object": "urn:ngsi-ld:entities:E2" },
    "Sub": {
      "value": 6,
      "String": "String",
      "Int": 1,
      "Float": 3.14,
      "Bool": "true",
      "Geo": { "type": "Point", "coordinates": [ 1, 2 ] },
      "Array": [ 5, 6 ],
      "Rel": { "object": "urn:ngsi-ld:entities:E2" }
    }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/upsert  --payload "$payload"
echo
echo


echo "02. GET the three entities"
echo "=========================="
orionCurl --url /ngsi-ld/v1/entities?type=T
echo
echo


echo "03. See one of the entities in mongo"
echo "===================================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "04. BATCH Upsert on existing entity urn:ngsi-ld:entities:E1"
echo "==========================================================="
payload='[
  {
    "id": "urn:ngsi-ld:entities:E1",
    "type": "T",
    "String": "A String",
    "Int": 4,
    "Float": 9.18,
    "Bool": "false",
    "Geo": { "type": "Point", "coordinates": [ 11, 12 ] },
    "Array": [ 15, 16 ],
    "Rel": { "object": "urn:ngsi-ld:entities:E3" },
    "Sub": {
      "value": 99,
      "String": "A Sub-String",
      "Int": 4,
      "Float": 9.19,
      "Bool": "false",
      "Geo": { "type": "Point", "coordinates": [ 21, 22 ] },
      "Array": [ 25, 26 ],
      "Rel": { "object": "urn:ngsi-ld:entities:E4" }
    }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/upsert  --payload "$payload"
echo
echo


echo "05. GET urn:ngsi-ld:entities:E1 and see the change in step 04 (replaced)"
echo "========================================================================"
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1
echo
echo


