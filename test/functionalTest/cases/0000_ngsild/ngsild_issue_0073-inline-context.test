	"_id" : {
		"id" : "urn:ngsi-ld:EntityWithPrefixExpansion",
		"type" : "https://uri.etsi.org/ngsi-ld/default-context/T1",
		"servicePath" : "/"
	},
	"attrNames" : [
		"http://this.is/the/prefix/A"
	],
	"attrs" : {
		"http://this=is/the/prefix/A" : {
			"type" : "Property",
			"creDate" : REGEX(.*),
			"modDate" : REGEX(.*),
			"value" : "http://this.is/the/prefix/A",
			"mdNames" : [ ]
		}
	},
	"creDate" : REGEX(.*),
