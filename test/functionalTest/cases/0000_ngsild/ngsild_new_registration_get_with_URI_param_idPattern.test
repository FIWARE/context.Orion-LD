echo "02. Get registration 01 and 04 using URI param idPattern=urn:ngsi-ld:Vehicle:E1.*"
echo "================================================================================="
orionCurl --url "/ngsi-ld/v1/csourceRegistrations?idPattern=urn:ngsi-ld:Vehicle:E1.*&prettyPrint=yes&spaces=2" --noPayloadCheck
