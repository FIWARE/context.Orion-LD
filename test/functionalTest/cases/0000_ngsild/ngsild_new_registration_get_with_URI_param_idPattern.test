--NAME--
Getting registrations with the idPattern URI param

--SHELL-INIT--
dbInit CB
orionldStart CB -experimental

--SHELL--

#
# 01. Create 5 registrations (on entities E1, E2, E21, E11, E3)
# 02. Get registration 01 and 04 using URI param idPattern=urn:ngsi-ld:Vehicle:E1.*
# 03. Get registration 02 and 03 using URI param idPattern=urn:ngsi-ld:Vehicle:E2.*
# 04. Get registration 05 using URI param idPattern=urn:ngsi-ld:Vehicle:E3.*
# 05. Get all 5 registrations using URI param idPattern=urn:ngsi-ld:Vehicle:.*
#

echo "01. Create 5 registrations with ID urn:ngsi-ld:reg01-05"
echo "======================================================="
payload='{
  "id": "urn:ngsi-ld:reg01",
  "type": "ContextSourceRegistration",
  "name": "reg_01",
  "description": "description of reg 01",
  "information": [
    {
      "entities": [
        {
          "id": "urn:ngsi-ld:Vehicle:E1",
          "type": "Vehicle"
        }
      ],
      "properties": [ "brandName", "speed" ],
      "relationships": [ "isParked" ]
    }
  ],
  "endpoint": "http://my.csource.org:1026"
}'
orionCurl --url /ngsi-ld/v1/csourceRegistrations -X POST --payload "$payload"
echo
echo


