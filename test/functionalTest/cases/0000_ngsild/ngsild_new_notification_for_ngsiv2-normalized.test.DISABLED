# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
NSGI-LD Cross Notification in NGSIv2 format - normalized

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0 IPv4 -experimental
accumulatorStart --pretty-print 127.0.0.1 ${LISTENER_PORT}

--SHELL--

#
# 01. Create a subscription with accumulator receiving NGSIv2 style notifications in Normalized format
# 02. Create an Entity E01 with attr P1 and P2 (using the new implementation)
# 03. Dump accumulator to see one notification
# 04. Add a property P3 to E01
# 05. Dump accumulator to see one notification
#

echo "01. Create a subscription with accumulator receiving NGSIv2 style notifications in Normalized format"
echo "===================================================================================================="
payload='{
  "id": "http://a.b.c/subs/sub01",
  "type": "Subscription",
  "entities": [
    {
      "id": "urn:ngsi-ld:E01",
      "type": "T"
    }
  ],
  "notification": {
    "format": "x-ngsiv2-normalized",
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "02. Create an Entity E01 with attr P1 and P2 (using the new implementation)"
echo "==========================================================================="
payload='{
  "id": "urn:ngsi-ld:E01",
  "type": "T",
  "P1": {
    "type": "Property",
    "value": 1,
    "Sub-R1": {
      "type": "Relationship",
      "object": "urn:E1"
    }
  },
  "P2": {
    "type": "Property",
    "value": "ok"
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload"
echo
echo


echo "03. Dump accumulator to see one notification, then reset the accumulator"
echo "========================================================================"
accumulatorDump
accumulatorReset
echo
echo


echo "04. Add a property P3 to E01"
echo "============================"
payload='{
  "P3": {
    "type": "Property",
    "value": 3
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:E01 -X PATCH --payload "$payload"
echo
echo


echo "05. Dump accumulator to see one notification"
echo "============================================"
accumulatorDump
echo
echo


--REGEXPECT--
01. Create a subscription with accumulator receiving notifications in Concise Attribute Format
==============================================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/subscriptions/http://a.b.c/subs/sub01
Date: REGEX(.*)



02. Create an Entity E01 with attr P1 and P2 (using the new implementation)
===========================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:E01
Date: REGEX(.*)



03. Dump accumulator to see one notification, then reset the accumulator
========================================================================
POST http://REGEX(.*)/notify?subscriptionId=http://a.b.c/subs/sub01
Content-Length: 361
User-Agent: orionld
Accept: application/json
Content-Type: application/ld+json
Ngsild-Attribute-Format: Concise

{
    "@context": "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld",
    "data": [
        {
            "P1": {
                "Sub-R1": {
                    "object": "urn:E1"
                },
                "value": 1
            },
            "P2": "ok",
            "id": "urn:ngsi-ld:E01",
            "type": "T"
        }
    ],
    "id": "urn:ngsi-ld:Notification:REGEX([0-9a-f\-]{36})",
    "notifiedAt": "REGEX(.*)",
    "subscriptionId": "http://a.b.c/subs/sub01",
    "type": "Notification"
}
=======================================


04. Add a property P3 to E01
============================
HTTP/1.1 204 No Content
Date: REGEX(.*)



05. Dump accumulator to see one notification
============================================
POST REGEX(.*)
Content-Length: 
User-Agent: orionld
Accept: application/json
Content-Type: application/json
Ngsiv2-AttrsFormat: normalized

{
    "data": [
        {
            "P1": {
                "Sub-R1": {
                    "object": "urn:E1"
                },
                "value": 1
            },
            "P2": "ok",
            "P3": 3,
            "id": "urn:ngsi-ld:E01",
            "type": "T"
        }
    ],
    "id": "urn:ngsi-ld:Notification:REGEX([0-9a-f\-]{36})",
    "notifiedAt": "REGEX(.*)",
    "subscriptionId": "http://a.b.c/subs/sub01",
}
=======================================


--TEARDOWN--
brokerStop CB
accumulatorStop
dbDrop CB
