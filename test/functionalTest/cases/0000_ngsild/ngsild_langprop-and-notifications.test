# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Notifications with Language Property - old style notifications

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255 IPv4 -experimental
accumulatorStart --pretty-print 127.0.0.1 ${LISTENER_PORT}

--SHELL--

#
# 01. Create a subscription S1 on E1 and attribute L1, without 'lang'
# 02. Create a subscription S2 on E2 and attribute L2, with 'lang=en'
# 03. See subscription S2 in mongo - see lang=en
# 04. GET subscription S2 - see lang=en
# 05. Create an Entity E1 with a language-property L1
# 06. Dump/Reset accumulator - see one notification for S1, with L1 as a LanguageProperty
# 07. Create an Entity E2 with a language-property L2
# 08. Dump/Reset accumulator - see one notification for S2, with L2 as a Property 
# 09. Create a subscription S3 on E3 and attribute L3, with 'lang=en' and keyValues
# 10. Create an Entity E3 with a language-property L3
# 11. Dump/Reset accumulator - see one notification for S3, with L3 as a String
#
# LATER
# 21. PATCH S1 - add lang=es
# 22. Update E1
# 23. Dump/Reset accumulator - see one notification for S1, with L1 as a Property
#

echo "01. Create a subscription S1 on E1 and attribute L1, without 'lang'"
echo "==================================================================="
payload='{
  "id": "urn:subs:S1",
  "type": "Subscription",
  "entities": [
    {
      "id": "urn:ngsi-ld:entities:E1",
      "type": "T"
    }
  ],
  "watchedAttributes": [ "L1" ],
  "notification": {
    "attributes": [ "L1" ],
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "02. Create a subscription S2 on E2 and attribute L2, with 'lang=en'"
echo "==================================================================="
payload='{
  "id": "urn:subs:S2",
  "type": "Subscription",
  "entities": [
    {
      "id": "urn:ngsi-ld:entities:E2",
      "type": "T"
    }
  ],
  "watchedAttributes": [ "L2" ],
  "notification": {
    "attributes": [ "L2" ],
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  },
  "lang": "en"
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "03. See subscription S2 in mongo - see lang=en"
echo "=============================================="
mongoCmd2 ftest 'db.csubs.findOne({"_id": "urn:subs:S2"})'
echo
echo


echo "04. GET subscription S2 - see lang=en"
echo "====================================="
orionCurl --url /ngsi-ld/v1/subscriptions/urn:subs:S2
echo
echo


echo "05. Create an Entity E1 with a language-property L1"
echo "==================================================="
payload='{
  "id": "urn:ngsi-ld:entities:E1",
  "type": "T",
  "L1": {
    "type": "LanguageProperty",
    "languageMap": {
      "en": "english",
      "es": "ingles",
      "sv": "engelska"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "LANG: yes"
echo
echo


echo "06. Dump/Reset accumulator - see one notification for S1, with L1 as a LanguageProperty"
echo "======================================================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "07. Create an Entity E2 with a language-property L2"
echo "==================================================="
payload='{
  "id": "urn:ngsi-ld:entities:E2",
  "type": "T",
  "L2": {
    "type": "LanguageProperty",
    "languageMap": {
      "en": "english2",
      "es": "ingles2",
      "sv": "engelska2"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "LANG: yes"
echo
echo


echo "08. Dump/Reset accumulator - see one notification for S2, with L2 as a Property"
echo "==============================================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "09. Create a subscription S3 on E3 and attribute L3, with 'lang=en' and keyValues"
echo "================================================================================="
payload='{
  "id": "urn:subs:S3",
  "type": "Subscription",
  "entities": [
    {
      "id": "urn:ngsi-ld:entities:E3",
      "type": "T"
    }
  ],
  "watchedAttributes": [ "L3" ],
  "notification": {
    "attributes": [ "L3" ],
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    },
    "format": "keyValues"
  },
  "lang": "en"
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "10. Create an Entity E3 with a language-property L3"
echo "==================================================="
payload='{
  "id": "urn:ngsi-ld:entities:E3",
  "type": "T",
  "L3": {
    "type": "LanguageProperty",
    "languageMap": {
      "en": "english3",
      "es": "ingles3",
      "sv": "engelska3"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "LANG: yes"
echo
echo


echo "11. Dump/Reset accumulator - see one notification for S3, with L3 as a String"
echo "============================================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "21. PATCH S1 - add lang=es"
echo "=========================="
payload='{
  "lang": "es"
}'
orionCurl --url /ngsi-ld/v1/subscriptions/urn:subs:S1 -X PATCH --payload "$payload"
echo
echo


echo "22. Update E1"
echo "============="
payload='{
  "L1": {
    "languageMap": {
      "en": "english4",
      "es": "ingles4",
      "sv": "engelska4"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:E1/attrs -X PATCH --payload "$payload"
echo
echo


echo "23. Dump/Reset accumulator - see one notification for S1, with L1 as a Property"
echo "==============================================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "24. See the patched subscription in the database - see lang=es"
echo "=============================================================="
mongoCmd2 ftest 'db.csubs.findOne({"_id": "urn:subs:S1"})'
echo
echo


