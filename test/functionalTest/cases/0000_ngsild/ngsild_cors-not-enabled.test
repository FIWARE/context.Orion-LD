# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
CORS error handling when not enabled (default behaviour)

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Attempt an OPTIONS request on a broker that has CORS disabled - see Bad Verb response
#

echo "01. Attempt an OPTIONS request on a broker that has CORS disabled - see Bad Verb response"
echo "========================================================================================="
orionCurl --url /ngsi-ld/v1/entities -X OPTIONS
echo
echo


--REGEXPECT--
01. Attempt an OPTIONS request on a broker that has CORS disabled - see Bad Verb response
=========================================================================================
HTTP/1.1 405 Method Not Allowed
Content-Length: 0
Allow: GET,POST
Date: REGEX(.*)



--TEARDOWN--
brokerStop CB
dbDrop CB
