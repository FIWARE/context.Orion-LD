# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
BATCH Update with LanguageProperty

--SHELL-INIT--
dbInit CB
orionldStart CB -experimental

--SHELL--

#
# 01. BATCH Create two entities with a language property L
# 02. BATCH Update the two entities
# 03. See one of the entities in the database
# 04. GET both entities
# 05. Attempt to Batch Update with the RHS of L:languageMap as a non-object, e.g. the number 13 - see error
# 06. Attempt to Batch Update with the RHS of L:languageMap:es as a non-string, e.g. the number 14 - see error
#

echo "01. BATCH Create two entities with a language property L"
echo "========================================================"
payload='[
    {
        "en": {
            "languageMap": {
                "en": "English",
                "es": "Ingles",
                "sv": "Engelska"
            },
            "type": "LanguageProperty"
        },
        "id": "urn:E1",
        "type": "T"
    },
    {
        "es": {
            "languageMap": {
                "en": "Spanish",
                "es": "Castellano",
                "sv": "Spanska"
            },
            "type": "LanguageProperty"
        },
        "id": "urn:E2",
        "type": "T"
    }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/create --payload "$payload"
echo
echo


echo "02. BATCH Update the two entities"
echo "================================="
payload='[
    {
        "en": {
            "languageMap": {
                "en": "EnglishUpdated",
                "es": "InglesUpdated",
                "sv": "EngelskaUpdated"
            },
            "type": "LanguageProperty"
        },
        "id": "urn:E1"
    },
    {
        "es": {
            "languageMap": {
                "en": "SpanishUpdated",
                "es": "CastellanoUpdated",
                "sv": "SpanskaUpdated"
            },
            "type": "LanguageProperty"
        },
        "id": "urn:E2"
    }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/update --payload "$payload"
echo
echo


echo "03. See one of the entities in the database"
echo "==========================================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "04. GET both entities"
echo "====================="
orionCurl --url /ngsi-ld/v1/entities?type=T -H "Orionld-Legacy: true"
echo
echo


echo "05. Attempt to Batch Update with the RHS of L:languageMap as a non-object, e.g. the number 13 - see error"
echo "========================================================================================================="
payload='[
    {
        "id": "urn:E1",
        "type": "T",
        "L": {
            "languageMap": 13,
            "type": "LanguageProperty"
        }
    }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/update --payload "$payload"
echo
echo


echo "06. Attempt to Batch Update with the RHS of L:languageMap:es as a non-string, e.g. the number 14 - see error"
echo "============================================================================================================"
payload='[
    {
        "id": "urn:E1",
        "type": "T",
        "L": {
            "languageMap": {
              "en": "el",
              "es": 14,
              "sv": "ell"
            },
            "type": "LanguageProperty"
        }
    }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/update --payload "$payload"
echo
echo


--REGEXPECT--
