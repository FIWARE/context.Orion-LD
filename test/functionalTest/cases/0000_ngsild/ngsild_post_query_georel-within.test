echo "======================================"
payload='{
  "id": "http://a.b.c/entity/E09",
  "type": "T",
  "geo": {
    "type": "GeoProperty",
    "value": {
      "type": "Polygon",
      "coordinates": [ [ [ 7,2.5 ], [ 7,6 ], [ 2,6 ], [ 2,2.5 ], [ 7,2.5 ] ] ]
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
