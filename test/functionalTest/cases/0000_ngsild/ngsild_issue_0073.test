# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Prefix Expansion

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create an entity with inline context and attr-names usibng prefix expansion
# 02. Check mongo content
#

echo "01. Create an entity with inline context and attr-names usibng prefix expansion"
echo "==============================================================================="
payload='{
  "id": "urn:ngsi-ld:EntityWithPrefixExpansion",
  "type": "me:T1",
  "@context": {
    "me": "https://this.is.me/right/here/"
  },
  "me:prop1": {
    "type": "Property",
    "value": 12
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload" -H "Content-Type: application/ld+json" --linkHeaderFix
echo
echo


echo "02. Check mongo content"
echo "======================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


--REGEXPECT--
01. Create an entity with inline context and attr-names usibng prefix expansion
===============================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:EntityWithPrefixExpansion
Date: REGEX(.*)



02. Check mongo content
=======================
MongoDB shell version REGEX(.*)
connecting to: mongodb://localhost:27017/ftest
MongoDB server version: REGEX(.*)
{
	"_id" : {
		"id" : "urn:ngsi-ld:EntityWithPrefixExpansion",
		"type" : "https://this.is.me/right/here/T1",
		"servicePath" : "/"
	},
	"attrNames" : [
		"https://this.is.me/right/here/prop1"
	],
	"attrs" : {
		"https://this=is=me/right/here/prop1" : {
			"type" : "Property",
			"creDate" : REGEX(.*),
			"modDate" : REGEX(.*),
			"value" : 12,
			"mdNames" : [ ]
		}
	},
	"creDate" : REGEX(.*),
	"modDate" : REGEX(.*),
	"lastCorrelator" : ""
}
bye


--TEARDOWN--
brokerStop CB
dbDrop CB
