# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
New subscriptions with allocated q in sub-cache - test one and die for leak-finding purpose only

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0 IPv4 -experimental
accumulatorStart --pretty-print 127.0.0.1 ${LISTENER_PORT}

--SHELL--

#
# 01. Create a subscription S1 with q=P1
#

echo "01. Create a subscription S1 with q=P1"
echo "======================================"
payload='{
  "id": "urn:ngsi-ld:subs:S1",
  "type": "Subscription",
  "entities": [
    {
      "type": "T"
    }
  ],
  "q": "P1",
  "notification": {
    "format": "simplified",
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


--REGEXPECT--
01. Create a subscription S1 with q=P1
======================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /ngsi-ld/v1/subscriptions/urn:ngsi-ld:subs:S1
Date: REGEX(.*)



--TEARDOWN--
brokerStop CB
accumulatorStop
dbDrop CB
