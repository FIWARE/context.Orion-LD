# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Minimal V2 Subscription

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create a minimal NGSIv1 subscription
# 02. See the subscription in mongo
#

echo "01. Create a minimal NGSIv1 subscription"
echo "========================================"
payload='{
  "entities": [
    {
      "id": "E1"
    }
  ],
  "reference": "http://127.0.0.1:'${LISTENER_PORT}'/notify",
  "notifyConditions": [
    {
      "type": "ONCHANGE"
    }
  ]
}'
orionCurl --url /v1/subscribeContext --payload "${payload}"
echo
echo


echo "02. See the subscription in mongo"
echo "================================="
mongoCmd2 ftest "db.csubs.findOne()"
echo
echo


--REGEXPECT--
01. Create a minimal NGSIv1 subscription
========================================
HTTP/1.1 200 OK
Content-Length: 86
Content-Type: application/json
Fiware-Correlator: REGEX([0-9a-f\-]{36})
Date: REGEX(.*)

{
    "subscribeResponse": {
        "duration": "PT24H",
        "subscriptionId": "REGEX([0-9a-f]{24})"
    }
}


02. See the subscription in mongo
=================================
MongoDB shell version REGEX(.*)
connecting to: REGEX(.*)
MongoDB server version: REGEX(.*)
{
	"_id" : REGEX(.*),
	"expiration" : REGEX(.*),
	"reference" : "http://127.0.0.1:9997/notify",
	"custom" : false,
	"mimeType" : "application/json",
	"throttling" : -1,
	"servicePath" : "/#",
	"status" : "active",
	"entities" : [
		{
			"id" : "E1",
			"isPattern" : "false"
		}
	],
	"attrs" : [ ],
	"metadata" : [ ],
	"blacklist" : false,
	"createdAt" : REGEX(.*),
	"modifiedAt" : REGEX(.*),
	"conditions" : [ ],
	"expression" : {
		"q" : "",
		"mq" : "",
		"geometry" : "",
		"coords" : "",
		"georel" : "",
		"geoproperty" : ""
	},
	"format" : "JSON"
}
bye


--TEARDOWN--
brokerStop CB
dbDrop CB
