# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Retrieval of Entities with basic options

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255

--SHELL--

#
# 01. Create entity E1, type T, with attrs A1, A2, and location
# 02. Create entity E2, type T2, with attrs A1, A3, and location
# 03. Create entity E3, type T, with attrs A1, A2, and A3, and location
# 04. Create entity E4, type T2, with attrs A3, A4, and location
# 05. GET all entities of type T, see E1 and E3
# 06. GET all entities of type T2, see E2 and E4
# 07. GET all entities with entity id E3 or E4, see E3 and E4
# 08. GET all entities with attrs A3 - see E2, E3, E4
# 09. GET all entities with attrs A2 or A4 - see E1, E3 and E4
# 10. GET all entities with attrs A7 or A8 - see no entities
# 12. GET all entities with an attribute A3: q: 'A3', see E2, E3, and E4
# 13. GET all entities with an attribute A1=='E1:A1': q: 'A1==E1:A1', see E1
# 20. GET all entities with a location near a Point, using GET
# 21. GET all entities with a location near a Point, using POST

echo "01. Create entity E1, type T, with attrs A1, A2"
echo "==============================================="
payload='{
  "id": "http://a.b.c/entity/E1",
  "type": "T",
  "A1": {
    "type": "Property",
    "value": "E1:A1"
  },
  "A2": {
    "type": "Property",
    "value": "E1/A2"
  },
  "location": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [ 11, 10]
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. Create entity E2, type T2, with attrs A1, A3"
echo "================================================"
payload='{
  "id": "http://a.b.c/entity/E2",
  "type": "T2",
  "A1": {
    "type": "Property",
    "value": "E2/A1"
  },
  "A3": {
    "type": "Property",
    "value": "E2/A3"
  },
  "location": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [ 12, 10]
    }
  }

}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "03. Create entity E3, type T, with attrs A1, A2, and A3"
echo "======================================================="
payload='{
  "id": "http://a.b.c/entity/E3",
  "type": "T",
  "A1": {
    "type": "Property",
    "value": "E3/A1"
  },
  "A2": {
    "type": "Property",
    "value": "E3/A2"
  },
  "A3": {
    "type": "Property",
    "value": "E3/A3"
  },
  "location": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [ 13, 10]
    }
  }

}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "04. Create entity E4, type T2, with attrs A3, A4"
echo "================================================"
payload='{
  "id": "http://a.b.c/entity/E4",
  "type": "T2",
  "A3": {
    "type": "Property",
    "value": "E4/A3"
  },
  "A4": {
    "type": "Property",
    "value": "E4/A4"
  },
  "location": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [ 14, 10]
    }
  }

}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "05. GET all entities of type T, see E1 and E3"
echo "============================================="
payload='{
  "entities": [
    {
      "type": "T"
    }
  ]
}'
orionCurl --url '/ngsi-ld/v1/entityOperations/query?prettyPrint=yes' --payload "$payload" --noPayloadCheck
echo
echo


echo "06. GET all entities of type T2, see E2 and E4"
echo "=============================================="
payload='{
  "entities": [
    {
      "type": "T2"
    }
  ]
}'
orionCurl --url '/ngsi-ld/v1/entityOperations/query?prettyPrint=yes' --payload "$payload" --noPayloadCheck
echo
echo


echo "07. GET all entities with entity id E3 or E4, see E3 and E4"
echo "==========================================================="
payload='{
  "entities": [
    {
      "id": "http://a.b.c/entity/E3"
    },
    {
      "id": "http://a.b.c/entity/E4"
    }
  ]
}'
orionCurl --url '/ngsi-ld/v1/entityOperations/query?prettyPrint=yes' --payload "$payload" --noPayloadCheck
echo
echo


echo "08. GET all entities with attrs A3 - see E2, E3, E4"
echo "==================================================="
payload='{
  "attrs": [ "A3" ]
}'
orionCurl --url '/ngsi-ld/v1/entityOperations/query?prettyPrint=yes' --payload "$payload" --noPayloadCheck
echo
echo


echo "09. GET all entities with attrs A2 or A4 - see E1, E3 and E4"
echo "============================================================"
payload='{
  "attrs": [ "A2", "A4" ]
}'
orionCurl --url '/ngsi-ld/v1/entityOperations/query?prettyPrint=yes' --payload "$payload" --noPayloadCheck
echo
echo


echo "10. GET all entities with attrs A7 or A8 - see no entities"
echo "=========================================================="
payload='{
  "attrs": [ "A7", "A8" ]
}'
orionCurl --url '/ngsi-ld/v1/entityOperations/query?prettyPrint=yes' --payload "$payload" --noPayloadCheck
echo
echo


echo "12. GET all entities with an attribute A3: q: 'A3', see E2, E3, and E4"
echo "======================================================================"
payload='{
  "entities": [
    {
      "idPattern": ".*"
    }
  ],
  "q": "A3"
}'
orionCurl --url '/ngsi-ld/v1/entityOperations/query?prettyPrint=yes' --payload "$payload" --noPayloadCheck
echo
echo


echo "13. GET all entities with an attribute A1=='E1:A1': q: 'A1==E1:A1', see E1"
echo "=========================================================================="
payload='{
  "q": "A1==%22E1:A1%22"
}'
orionCurl --url '/ngsi-ld/v1/entityOperations/query?prettyPrint=yes' --payload "$payload" --noPayloadCheck
echo
echo


echo "20. GET all entities with a location near a Point, using GET"
echo "============================================================"
orionCurl --url '/ngsi-ld/v1/entities?geometry=point&coordinates=\[12,10\]&georel=near;maxDistance==100000'
echo
echo


echo "21. GET all entities with a location near a Point"
echo "================================================="
payload='{
  "geoQ": {
    "geometry": "Point",
    "georel": "near;maxDistance==100000",
    "coordinates": [ 12, 10 ],
    "geoproperty": "location"
  }
}'
orionCurl --url /ngsi-ld/v1/entityOperations/query --payload "$payload"
echo
echo


