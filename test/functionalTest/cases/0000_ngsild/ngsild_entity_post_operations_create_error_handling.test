    "urn:ngsi-ld:entity:E2"
  ],
  "errors": [
    {
      "entityId": "invalid entity::id",
      "error": {
        "type": "https://uri.etsi.org/ngsi-ld/errors/BadRequestData",
        "title": "field with invalid type",
        "detail": "entity::id",
        "status": 400
      }
    }
  ]
}



