# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Attribute Patch with key-values

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB

--SHELL--

#
# 01. Create an entity with a Property P
# 02. PATCH the Property P using keyValues
# 03. GET the entity and see the updates from step 02
# 04. Another PATCH, but with special sub-attrs, such as unitCode
# 05. GET the entity and see the updates from step 04
#
# ERROR CHECKS
# 06. Invalid type value for the attribute
# 07. PATCH the Property P using keyValues, but a Relationship isn't a string
# 08. PATCH the Property P using keyValues, but a GeoProperty isn't an object
# 09. PATCH the Property P using keyValues, but a LanguageProperty isn't an object
#

echo "01. Create an entity with a Property P"
echo "======================================"
payload='{
  "id": "urn:ngsi-ld:entities:T:E1",
  "type": "T",
  "P": {
    "type": "Property",
    "value": 1,
    "P1": {
      "type": "Property",
      "value": "will be overwritten"
    },
    "P5": {
      "type": "Property",
      "value": "will not be overwritten"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. PATCH the Property P using keyValues"
echo "========================================"
payload='{
  "type": "Property",
  "value": 2,
  "P1": 12,
  "P2": "12",
  "P3": true,
  "P4": [ "a", "b" ],
  "R1": "urn:xxx",
  "G1": {
    "type": "Point",
    "coordinates": [ 1, 2, 4 ]
  },
  "L1": {
    "en": "Here",
    "es": "Aqui"
  }
}'
orionCurl --url "/ngsi-ld/v1/entities/urn:ngsi-ld:entities:T:E1/attrs/P?options=keyValues&relationships=R1&geoproperties=G1&languageproperties=L1" -X PATCH --payload "$payload"
echo
echo


echo "03. GET the entity and see the updates from step 02"
echo "==================================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:T:E1
echo
echo


echo "04. Another PATCH, but with special sub-attrs, such as unitCode"
echo "==============================================================="
payload='{
  "type": "Property",
  "value": 4,
  "unitCode": "cm",
  "observedAt": "2022-01-31T10:00:00.000Z"
}'
orionCurl --url "/ngsi-ld/v1/entities/urn:ngsi-ld:entities:T:E1/attrs/P?options=keyValues&relationships=R1&geoproperties=G1&languageproperties=L1" -X PATCH --payload "$payload"
echo
echo


echo "05. GET the entity and see the updates from step 04"
echo "==================================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entities:T:E1
echo
echo


echo "06. Invalid type value for the attribute"
echo "========================================"
payload='{
  "type": "Relationship",
  "P1": 13
}'
orionCurl --url "/ngsi-ld/v1/entities/urn:ngsi-ld:entities:T:E1/attrs/P?options=keyValues" -X PATCH --payload "$payload"
echo
echo


echo "07. PATCH the Property P using keyValues, but a Relationship isn't a string"
echo "==========================================================================="
payload='{
  "R1": 13
}'
orionCurl --url "/ngsi-ld/v1/entities/urn:ngsi-ld:entities:T:E1/attrs/P?options=keyValues&relationships=R1" -X PATCH --payload "$payload"
echo
echo


echo "08. PATCH the Property P using keyValues, but a GeoProperty isn't an object"
echo "==========================================================================="
payload='{
  "G1": 13
}'
orionCurl --url "/ngsi-ld/v1/entities/urn:ngsi-ld:entities:T:E1/attrs/P?options=keyValues&geoproperties=G1" -X PATCH --payload "$payload"
echo
echo


echo "09. PATCH the Property P using keyValues, but a LanguageProperty isn't an object"
echo "================================================================================"
payload='{
  "L1": 13
}'
orionCurl --url "/ngsi-ld/v1/entities/urn:ngsi-ld:entities:T:E1/attrs/P?options=keyValues&languageproperties=L1" -X PATCH --payload "$payload"
echo
echo


--REGEXPECT--
