# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Creation and retreival of an Array Context

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 212-249

--SHELL--

#
# 01. Create Entity http://a.b.c/E1, with array context
# 02. GET the context
#


echo "01. Create Entity http://a.b.c/E1, with array context"
echo "====================================================="
payload='{
  "id": "http://a.b.c/E1",
  "type": "A",
  "@context": [
    "https://fiware.github.io/tutorials.Step-by-Step/tutorials-context.jsonld",
    "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld"
  ]
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json" -H "Accept: application/ld+json" --linkHeaderFix
contextId=$(cat /tmp/httpHeaders.out | grep 'Link:' | awk -F/ '{ print $8}' | awk -F\> '{ print $1 }')
echo
echo


echo "02. GET the context"
echo "==================="
orionCurl --url /ngsi-ld/ex/v1/contexts/$contextId
echo
echo


--REGEXPECT--
01. Create Entity http://a.b.c/E1, with array context
=====================================================
HTTP/1.1 201 Created
Content-Length: 0
Link: REGEX(<http://IP:PORT/ngsi-ld/ex/v1/contexts/.*)
Location: /ngsi-ld/v1/entities/http://a.b.c/E1
Date: REGEX(.*)



02. GET the context
===================
HTTP/1.1 200 OK
Content-Length: 163
Content-Type: application/json
Date: REGEX(.*)

{
    "@context": [
        "https://fiware.github.io/tutorials.Step-by-Step/tutorials-context.jsonld",
        "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld"
    ]
}


--TEARDOWN--
brokerStop CB
dbDrop CB
