# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Content-Type, @context, and tenant in Distributed Operations

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 20-21,31-32,42 IPv4 -experimental -forwarding
accumulatorStart --pretty-print --url /ngsi-ld/v1/entities/urn:E1

--SHELL--
#
# 01. Create an entity urn:E1 with an attribute P1
#
# 02. Create a matching registration for the accumulator, with all default values for Content-Type + @context
# 03. PATCH /entities/urn:E1 to provoke a distributed request
# 04. Dump and reset the accumulator. See Content-Type: application/json and no @context (Core Context is used)
# 05. DELETE the registration
#
# 06. Create a registration with a tenant and the rest default values
# 07. PATCH /entities/urn:E1 to provoke a distributed request
# 08. Dump and reset the accumulator. See Content-Type: application/json and no @context (Core Context is used) AND the NGSILD-Tenant header
#
# 09. PATCH /entities/urn:E1 with application/ld+json to provoke a distributed request
# 10. Dump and reset the accumulator. See Content-Type: application/ld+json and a @context field in the payload body (Core Context)
# 11. DELETE the registration
#
# 12. Create a registration with a 'jsonldContext': 'xxx' in contextSourceInfo
# 13. PATCH /entities/urn:E1 with application/ld+json to provoke a distributed request
# 14. Dump and reset the accumulator. See Content-Type: application/json and The HTTP Header 'Link: xxx'
# 15. DELETE the registration
#
echo "01. Create an entity urn:E1 with an attribute P1"
echo "================================================"
payload='{
  "id": "urn:E1",
  "type": "T",
  "P1": 1
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. Create a matching registration for the accumulator, with all default values for Content-Type + @context"
echo "==========================================================================================================="
payload='{
  "id": "urn:ngsi-ld:registration:R1",
  "type": "ContextSourceRegistration",
  "information": [
    {
      "entities": [
        {
          "id": "urn:E1",
          "type": "T"
        }
      ],
      "propertyNames": [ "P1" ]
    }
  ],
  "mode": "inclusive",
  "operations": [ "mergeEntity", "retrieveEntity" ],
  "endpoint": "http://localhost:'$LISTENER_PORT'"
}'
orionCurl --url /ngsi-ld/v1/csourceRegistrations --payload "$payload"
echo
echo


echo "03. PATCH /entities/urn:E1 to provoke a distributed request"
echo "==========================================================="
payload='{
  "P1": 3
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1 --payload "$payload" -X PATCH
echo
echo


echo "04. Dump and reset the accumulator. See Content-Type: application/json and no @context (Core Context is used)"
echo "============================================================================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "05. DELETE the registration"
echo "==========================="
orionCurl --url /ngsi-ld/v1/csourceRegistrations/urn:ngsi-ld:registration:R1 -X DELETE
echo
echo


echo "06. Create a registration with a tenant and the rest default values"
echo "==================================================================="
payload='{
  "id": "urn:ngsi-ld:registration:R2",
  "type": "ContextSourceRegistration",
  "information": [
    {
      "entities": [
        {
          "id": "urn:E1",
          "type": "T"
        }
      ],
      "propertyNames": [ "P1" ]
    }
  ],
  "mode": "inclusive",
  "operations": [ "mergeEntity", "retrieveEntity" ],
  "endpoint": "http://localhost:'$LISTENER_PORT'",
  "tenant": "do_t1"
}'
orionCurl --url /ngsi-ld/v1/csourceRegistrations --payload "$payload"
echo
echo


echo "07. PATCH /entities/urn:E1 to provoke a distributed request"
echo "==========================================================="
payload='{
  "P1": 7
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1 --payload "$payload" -X PATCH
echo
echo


echo "08. Dump and reset the accumulator. See Content-Type: application/json and no @context (Core Context is used) AND the NGSILD-Tenant header"
echo "=========================================================================================================================================="
accumulatorDump
accumulatorReset
echo
echo


echo "09. PATCH /entities/urn:E1 with application/ld+json to provoke a distributed request"
echo "===================================================================================="
payload='{
  "P1": 9,
  "@context": "https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1 --payload "$payload" -X PATCH --in jsonld
echo
echo


echo "10. Dump and reset the accumulator. See Content-Type: application/ld+json and a @context field in the payload body (Core Context)"
echo "================================================================================================================================="
accumulatorDump
accumulatorReset
echo
echo



echo "11. DELETE the registration"
echo "==========================="
orionCurl --url /ngsi-ld/v1/csourceRegistrations/urn:ngsi-ld:registration:R2 -X DELETE
echo
echo


echo "12. Create a registration with a 'jsonldContext': 'xxx' in contextSourceInfo"
echo "============================================================================"
payload='{
  "id": "urn:ngsi-ld:registration:R3",
  "type": "ContextSourceRegistration",
  "information": [
    {
      "entities": [
        {
          "id": "urn:E1",
          "type": "T"
        }
      ],
      "propertyNames": [ "P1" ]
    }
  ],
  "contextSourceInfo": [
    {
      "key": "jsonldContext",
      "value": "https://fiware.github.io/NGSI-LD_TestSuite/ldContext/testContext.jsonld"
    }
  ],
  "mode": "inclusive",
  "operations": [ "mergeEntity", "retrieveEntity" ],
  "endpoint": "http://localhost:'$LISTENER_PORT'"
}'
orionCurl --url /ngsi-ld/v1/csourceRegistrations --payload "$payload"
echo
echo


echo "13. PATCH /entities/urn:E1 with application/ld+json to provoke a distributed request"
echo "===================================================================================="
payload='{
  "P1": 13,
  "@context": "https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1 --payload "$payload" -X PATCH --in jsonld
echo
echo


echo "14. Dump and reset the accumulator. See Content-Type: application/json and The HTTP Header 'Link: xxx'"
echo "======================================================================================================"
accumulatorDump
accumulatorReset
echo
echo


echo "15. DELETE the registration"
echo "==========================="
orionCurl --url /ngsi-ld/v1/csourceRegistrations/urn:ngsi-ld:registration:R3 -X DELETE
echo
echo


--REGEXPECT--
