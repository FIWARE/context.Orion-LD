# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Notifications - value of sub-properties that are compound

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create a subscription
# 02. Create a matching Entity E1, with both a Property and a Relationship having one sub-property of every type
# 03. Dump the accumulator to see the notification - check the sub-property values
#

echo "01. Create a subscription"
echo "========================="
payload='{
  "id": "urn:ngsi-ld:Subscription:S1",
  "type": "Subscription",
  "entities": [
    {
      "type": "T"
    }
  ],
  "notification": {
    "format": "normalized",
    "endpoint": {
      "uri": "http://localhost:'$LISTENER_PORT'/notify",
      "accept": "application/json"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "02. Create a matching Entity E1, with both a Property and a Relationship having one sub-property of every type"
echo "=============================================================================================================="
payload='{
  "id": "urn:ngsi-ld:Entity:E1",
  "type": "T",
  "P1": {
    "type": "Property",
    "value": [ 1,2 ],
    "pp_int": {
      "type": "Property",
      "value": 1
    },
    "pp_float": {
      "type": "Property",
      "value": 1.123
    },
    "pp_bool": {
      "type": "Property",
      "value": true
    },
    "pp_string": {
      "type": "Property",
      "value": "STRING"
    },
    "pp_object": {
      "type": "Property",
      "value":  { "a": true }
    },
    "pp_array": {
      "type": "Property",
      "value": [1,2,3]
    },
    "pp_relationship": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:Entity:E2"
    }
  },
  "R1": {
    "type": "Relationship",
    "object": "urn:ngsi-ld:Entity:E2",
    "pp_int": {
      "type": "Property",
      "value": 1
    },
    "pp_float": {
      "type": "Property",
      "value": 1.123
    },
    "pp_bool": {
      "type": "Property",
      "value": true
    },
    "pp_string": {
      "type": "Property",
      "value": "STRING"
    },
    "pp_object": {
      "type": "Property",
      "value":  { "a": true }
    },
    "pp_array": {
      "type": "Property",
      "value": [1,2,3]
    },
    "pp_relationship": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:Entity:E2"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "03. Dump the accumulator to see the notification - check the sub-property values"
echo "================================================================================"
sleep 1
accumulatorDump
echo
echo


--REGEXPECT--
