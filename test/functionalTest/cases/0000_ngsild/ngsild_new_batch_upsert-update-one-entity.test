# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Entity Batch Upsert Updating one single entity

--SHELL-INIT--
dbInit CB
orionldStart CB -experimental
accumulatorStart --pretty-print 127.0.0.1 ${LISTENER_PORT}

--SHELL--

#
# 01. Create the entity E1 to be UPDATED in Step 03
# 02. Create a subscription for all entities of type Vehicle
# 03. BATCH Upsert/Update entity E1 with 2 attributes with 2 sub-attributes each
# 04. See E1 in mongo
# 05. GET E1 with sysAttrs
# 06. Make sure E1's modifiedAt > createdAt
# 07. Dump the accumulator to see one notification
#

echo "01. Create the entity E1 to be UPDATED in Step 03"
echo "================================================="
payload='[
  {
    "id": "urn:ngsi-ld:entity:E1",
    "type": "Vehicle",
    "P0": "Step 1",
    "R0": { "object": "urn:E0" },
    "P1": "Will be replaced",
    "R1": { "object": "urn:to:be:replaced" }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/upsert -X POST --payload "$payload"
echo
echo


echo "02. Create a subscription for all entities of type Vehicle"
echo "=========================================================="
payload='{
  "id": "urn:ngsi-ld:subscriptions:S1",
  "type": "Subscription",
  "entities": [
    {
      "type": "Vehicle"
    }
  ],
  "notification": {
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "03. BATCH Upsert/Update entity E1 with 2 attributes with 2 sub-attributes each"
echo "=============================================================================="
payload='[
  {
    "id": "urn:ngsi-ld:entity:E1",
    "type": "Vehicle",
    "P1": {
      "type": "Property",
      "value": "STEP 03",
      "P1_P1": {
        "type": "Property",
        "value": "STEP 03"
      },
      "P1_R1": {
        "type": "Relationship",
        "object": "urn:E1:R1"
      },
      "unitCode": "cm",
      "observedAt": "2022-08-18T12:28:00.123Z"
    },
    "R1": {
      "type": "Relationship",
      "object": "urn:E1:R1",
      "P1_P1": {
        "type": "Property",
        "value": "STEP 03"
      },
      "P1_R1": {
        "type": "Relationship",
        "object": "urn:E1:R1"
      },
      "observedAt": "2022-08-18T12:28:00.123Z"
    }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/upsert?options=update -X POST --payload "$payload"
echo
echo


echo "04. See E1 in mongo"
echo "==================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "05. GET E1 with sysAttrs"
echo "========================"
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:entity:E1?options=sysAttrs
echo
echo

echo "06. Make sure E1's modifiedAt > createdAt"
echo "========================================="
creDate=$(mongoCmd2 ftest 'db.entities.findOne({"_id.id": "urn:ngsi-ld:entity:E1"})' | grep '^	"creDate"' | awk '{ print $3}' | awk -F, '{print $1}')
modDate=$(mongoCmd2 ftest 'db.entities.findOne({"_id.id": "urn:ngsi-ld:entity:E1"})' | grep '^	"modDate"' | awk '{ print $3}' | awk -F, '{print $1}')
echo creDate: \"$creDate\"
echo modDate: \"$modDate\"
if [ "$modDate" != "$creDate" ]
then
  echo "modifiedAt > createdAt"
else
  echo "Error in Entity timestamps"
fi
echo
echo


echo "07. Dump the accumulator to see one notification"
echo "================================================"
accumulatorDump
echo
echo


