# {
#   "@context": {
#     "T": "http://example.org/T",
#     "T2": "http://example.org/T2",
#     "T3": "http://example.org/T3",
#     "P1": "http://example.org/P1",
#     "P2": "http://example.org/P2",
#     "P3": "http://example.org/P3",
#     "R1": "http://example.org/R1",
#     "R2": "http://example.org/R2",
#     "R3": "http://example.org/R3",
