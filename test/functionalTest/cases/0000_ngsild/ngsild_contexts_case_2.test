#     "P1_P1": "http://example.org/P1_P1",
#     "R1_P1": "http://example.org/R1_P1",
#     "R1_R1": "http://example.org/R1_R1"
#   }
# }
#
# https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld:
# {
#   "@context": {
#     "id": "@id",
#     "type": "@type",
#     "value": "http://uri.etsi.org/ngsi-ld/hasValue",
#     "object": {
#       "@id": "http://uri.etsi.org/ngsi-ld/hasObject",
#       "@type":"@id"
#     },
#     "Property": "http://uri.etsi.org/ngsi-ld/Property",
#     "Relationship": "http://uri.etsi.org/ngsi-ld/Relationship",
#     ...                                                                                                                                                                        
#   }
# }


#
# 01. POST /ngsi-ld/v1/entities, with a context that is a 'string reference' to another context that is a 'simple' context
# 02. Checking mongo to see a correct context
#

echo "01. POST /ngsi-ld/v1/entities, with a context that is a 'string reference' to another context that is a 'simple' context"
echo "========================================================================================================================"
payload='{
  "id": "http://a.b.c/entity/E2",
  "type": "A",
  "name": {
    "type": "Property",
    "value": "John 2"
  },
  "@context": "https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld"
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload" -H "Content-Type: application/ld+json"
echo
echo


echo "02. Checking mongo to see a correct context"
echo "==========================================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


--REGEXPECT--
