# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Batch Create with an array of three entities, see issue #776

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 

--SHELL--

#
# 01. Batch create 100 entities with 10 geoproperties each
#

echo "01. Batch create 100 entities with 10 geoproperties each"
echo "========================================================"
typeset -i eId
eId=1
entities="["
while [ $eId -le 50 ]
do
  entity='{
    "id": "urn:ngsi-ld:TemperatureSensor:'$eId'",
    "type": "TemperatureSensor",
    "location": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location2": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location3": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location4": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location5": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location6": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location7": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location8": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location9": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    },
    "location10": {
      "type": "GeoProperty",
      "value": {
        "type": "Point",
        "coordinates": [1,2]
      }
    }
  }'
  entities=$entities$entity
  if [ $eId != 50 ]
  then
    entities=$entities","
  fi
  eId=$eId+1
done
entities=$entities"]"
echo $entities > /tmp/entities

orionCurl --url /ngsi-ld/v1/entityOperations/create --payload "$entities"
echo
echo

