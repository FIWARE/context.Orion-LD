echo
echo


echo "15. Dump/Reset accumulator, see all previous values"
echo "==================================================="
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "16. POST /entities/urn:E1/attrs - setting A1, R1, L1, and G1 in payload body"
echo "============================================================================"
payload='{
  "A1": 16,
  "R1": { "object": "urn:E16" },
  "L1": { "languageMap": { "es": "dieciseis", "en": "sixteen" } },
  "G1": { "type": "Point", "coordinates": [ 16, 16 ] }
