  "R1": { "object": "urn:E12" },
  "L1": { "languageMap": { "es": "doce", "en": "twelve" } }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1 --payload "$payload" -X PATCH
echo
echo


echo "13. Dump/Reset accumulator, see all previous values"
echo "==================================================="
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "14. PATCH /entities/urn:E1/attrs - setting A1, R1, L1, and G1 in payload body"
echo "============================================================================="
payload='{
  "A1": 14,
  "R1": { "object": "urn:E14" },
  "L1": { "languageMap": { "es": "catorce", "en": "fourteen" } },
  "G1": { "type": "Point", "coordinates": [ 14, 14 ] }
}'
