echo "26. PUT /ngsi-ld/v1/entities/urn:E1 - setting A1, R1, L1, and G1 in payload body"
echo "================================================================================"
payload='{
  "id": "urn:E1",
  "type": "Device",
  "A1": 26,
  "R1": { "object": "urn:E26" },
  "L1": { "languageMap": { "es": "veintiseis", "en": "twenty-six" }  },
