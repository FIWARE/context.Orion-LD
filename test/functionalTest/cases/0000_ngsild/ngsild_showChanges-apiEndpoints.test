# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
showChanges in Subscription - provoke a notification and see the previousValue for ALL ENDPOINTS on single Entity

--SHELL-INIT--
dbInit CB
orionldStart CB -experimental
accumulatorStart --pretty-print

--SHELL--

#
# 01. Create a subscription S1 for entity urn:E1, with showChanges set to true
# 02. Create E1 with an attribute A1 == 1
# 03. Dump/Reset accumulator, see A1's value but no previousValue, as it's a creation
# 04. PATCH /entities/urn:E1/attrs/A1, setting its value to 4
# 05. Dump/Reset accumulator, see A1's value and previousValue
# 06. PATCH /entities/urn:E1/attrs/R1, setting its object to urn:E6
# 07. Dump/Reset accumulator, see R1's object and previousObject
# 08. PATCH /entities/urn:E1/attrs/L1, setting its languageMap to OCHO/EIGHT
# 09. Dump/Reset accumulator, see L1's languageMap and previousLanguageMap
# 10. PATCH /entities/urn:E1/attrs/G1, setting its coords to [10,10]
# 11. Dump/Reset accumulator, see G1's value and previousValue
# 12. PATCH /entities/urn:E1 - setting A1, R1, L1, and G1 in payload body
# 13. Dump/Reset accumulator, see all previous values
# 14. PATCH /entities/urn:E1/attrs - setting A1, R1, L1, and G1 in payload body
# 15. Dump/Reset accumulator, see all previous values
# 16. POST /entities/urn:E1/attrs - setting A1, R1, L1, and G1 in payload body
# 17. Dump/Reset accumulator, see all previous values
# 18. PUT /ngsi-ld/v1/entities/urn:E1/attrs/A1, setting its value to 18
# 19. Dump/Reset accumulator, see A1's value and previousValue
# 20. PUT /ngsi-ld/v1/entities/urn:E1/attrs/R1, setting its object to urn:E20
# 21. Dump/Reset accumulator, see R1's object and previousObject
# 22. PUT /ngsi-ld/v1/entities/urn:E1/attrs/L1, setting its languageMap to veintidos/twenty-two
# 23. Dump/Reset accumulator, see L1's languageMap and previousLanguageMap
# 24. PUT /ngsi-ld/v1/entities/urn:E1/attrs/G1, setting its coords to [24,24]
# 25. Dump/Reset accumulator, see G1's value and previousValue
# 26. PUT /ngsi-ld/v1/entities/urn:E1 - setting A1, R1, L1, and G1 in payload body
# 27. Dump/Reset accumulator, see all previous values
#
# Later
# 28. DELETE /ngsi-ld/v1/entities/urn:E1/attrs/A1
# 29. Dump/Reset accumulator, see A1's NULL value and previousValue
#
# 30. /ngsi-ld/v1/entityOperations/upsert
# 31. DUMP
# 32. /ngsi-ld/v1/entityOperations/update
# 33. DUMP
# 34. /ngsi-ld/v1/entityOperations/delete
# 35. DUMP
# 36 - 40:  All ops but in a distributed env
#
# And then we have the put/path/post delete possibilities:
# Ex 1:
#   - we have an entity E1 with attrs A,B,C
#   - PUT /entities/E1 with attrs A,B
#   - A and B have been modified, C has been deleted
# Ex 2:
#   - There are a few examples, especially in batch ops
#

echo "01. Create a subscription S1 for entity urn:E1, with showChanges set to true"
echo "============================================================================"
payload='{
  "id": "urn:ngsi-ld:subs:S1",
  "type": "Subscription",
  "entities": [
    {
      "id": "urn:E1",
      "type": "Device"
    }
  ],
  "notification": {
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    },
    "showChanges": true
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "02. Create E1 with an attribute A1 == 1"
echo "======================================="
payload='{
  "id": "urn:E1",
  "type": "Device",
  "A1": 1,
  "R1": { "object": "urn:E1" },
  "L1": { "languageMap": { "es": "dos", "en": "two" } },
  "G1": { "type": "Point", "coordinates": [ 1, 1 ] }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "03. Dump/Reset accumulator, see A1's value but no previousValue, as it's a creation"
echo "==================================================================================="
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "04. PATCH /entities/urn:E1/attrs/A1, setting its value to 4"
echo "==========================================================="
payload='{
  "value": 4
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1/attrs/A1 --payload "$payload" -X PATCH
echo
echo


echo "05. Dump/Reset accumulator, see A1's value and previousValue"
echo "============================================================"
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "06. PATCH /entities/urn:E1/attrs/R1, setting its object to urn:E6"
echo "================================================================="
payload='{
  "object": "urn:E6" 
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1/attrs/R1 --payload "$payload" -X PATCH
echo
echo


echo "07. Dump/Reset accumulator, see R1's object and previousObject"
echo "=============================================================="
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "08. PATCH /entities/urn:E1/attrs/L1, setting its languageMap to OCHO/EIGHT"
echo "=========================================================================="
payload='{
  "languageMap": { "es": "ocho", "en": "eight" }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1/attrs/L1 --payload "$payload" -X PATCH
echo
echo


echo "09. Dump/Reset accumulator, see L1's languageMap and previousLanguageMap"
echo "========================================================================"
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "10. PATCH /entities/urn:E1/attrs/G1, setting its coords to [10,10]"
echo "=================================================================="
payload='{
  "value": { "type": "Point", "coordinates": [10,10] }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1/attrs/G1 --payload "$payload" -X PATCH
echo
echo


echo "11. Dump/Reset accumulator, see G1's value and previousValue"
echo "============================================================"
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "12. PATCH /entities/urn:E1 - setting A1, R1, L1, and G1 in payload body"
echo "======================================================================="
#payload='{
#  "A1": 12,
#  "A2": 12,
#  "R1": { "object": "urn:E12" },
#  "L1": { "languageMap": { "es": "doce", "en": "twelve" } },
#  "G1": { "type": "Point", "coordinates": [ 12, 12 ] }
#}'
