orionCurl --url /ngsi-ld/v1/entities/urn:E1/attrs --payload "$payload" -X POST
echo
echo


echo "17. Dump/Reset accumulator, see all previous values"
echo "==================================================="
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "18. PUT /ngsi-ld/v1/entities/urn:E1/attrs/A1, setting its value to 18"
echo "====================================================================="
payload='{
  "value": 18
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1/attrs/A1 --payload "$payload" -X PUT
echo
echo


echo "19. Dump/Reset accumulator, see A1's value and previousValue"
echo "============================================================"
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "20. PUT /ngsi-ld/v1/entities/urn:E1/attrs/R1, setting its object to urn:E20"
echo "==========================================================================="
payload='{
  "object": "urn:E20" 
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1/attrs/R1 --payload "$payload" -X PUT
echo
echo


echo "21. Dump/Reset accumulator, see R1's object and previousObject"
echo "=============================================================="
sleep .2
accumulatorDump
accumulatorReset
echo
echo


echo "22. PUT /ngsi-ld/v1/entities/urn:E1/attrs/L1, setting its languageMap to veintidos/twenty-two"
echo "============================================================================================="
payload='{
  "languageMap": { "es": "veintidos", "en": "twenty-two" }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:E1/attrs/L1 --payload "$payload" -X PUT
echo
echo


echo "23. Dump/Reset accumulator, see L1's languageMap and previousLanguageMap"
