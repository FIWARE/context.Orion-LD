# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Entity Batch Delete Test

--SHELL-INIT--
dbInit CB
orionldStart CB

--SHELL--

#
# 01. Create 4 entities: E1, E2, E3, and E4, odd ids with type T1, even with type T2
# 02. Remove entities E1 and E3 using DELETE /ngsi-ld/v1/entities?type=T1
# 03. Get all entities - see E2 and E4
# 04. Attempt to remove entities with type T1 again - see 204
#

echo "01. Create 4 entities: E1, E2, E3, and E4, odd ids with type T1, even with type T2"
echo "=================================================================================="
payload='{
  "id": "urn:ngsi-ld:entity:E1",
  "type": "T1",
  "A": {
    "type": "Property",
    "value": 1
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"

payload='{
  "id": "urn:ngsi-ld:entity:E2",
  "type": "T2",
  "A": {
    "type": "Property",
    "value": 2
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"

payload='{
  "id": "urn:ngsi-ld:entity:E3",
  "type": "T1",
  "A": {
    "type": "Property",
    "value": 3
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"

payload='{
  "id": "urn:ngsi-ld:entity:E4",
  "type": "T2",
  "A": {
    "type": "Property",
    "value": 4
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. Remove entities E1 and E3 using DELETE /ngsi-ld/v1/entities?type=T1"
echo "======================================================================="
orionCurl --url /ngsi-ld/v1/entities?type=T1 -X DELETE
echo
echo


echo "03. Get all entities - see E2 and E4"
echo "===================================="
orionCurl --url "/ngsi-ld/v1/entities?options=keyValues&local=true"
echo
echo


echo "04. Attempt to remove entities with type T1 again - see 204"
echo "==========================================================="
orionCurl --url /ngsi-ld/v1/entities?type=T1 -X DELETE
echo
echo



--REGEXPECT--
