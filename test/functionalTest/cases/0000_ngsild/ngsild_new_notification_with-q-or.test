# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Notification for subscriptions with q containing the OR operator

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0 IPv4 -experimental
accumulatorStart --pretty-print 127.0.0.1 ${LISTENER_PORT}

--SHELL--

#
# 01. Create a subscription S1 on type=T and with q='P1==5|P2==9'
# 02. Create an Entity E1/T, using POST /ngsi-ld/v1/entities, matching S5
# 03. Dump accumulator to see one notification
# 04. See subscription in mongo - make sure ldQ =='P1==5|P2==9', and that q+mq are P&!P
# 05. Create an Entity E2/T, using POST /v2/entities, matching S5
# 06. Dump accumulator to see NO notification
#
# 07. Kill broker and restart it - to take the sub from mongo and repopulate the sub-cache
# 08. Create an Entity E3/T, using POST /ngsi-ld/v1/entities, matching S5
# 09. Dump accumulator to see one notification
# 10. Create an Entity E4/T, using POST /v2/entities, matching S5
# 11. Dump accumulator to see NO notification
#

echo "01. Create a subscription S1 on type=T and with q='P1==5|P2==9'"
echo "==============================================================="
payload='{
  "id": "urn:ngsi-ld:subs:S1",
  "type": "Subscription",
  "entities": [
    {
      "type": "urn:T"
    }
  ],
  "q": "P1==5|P2==9",
  "notification": {
    "format": "simplified",
    "endpoint": {
      "uri": "http://127.0.0.1:'${LISTENER_PORT}'/notify"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/subscriptions --payload "$payload"
echo
echo


echo "02. Create an Entity E1/T, using POST /ngsi-ld/v1/entities, matching S5"
echo "======================================================================="
payload='{
  "id": "urn:ngsi-ld:entities:T:E1",
  "type": "urn:T",
  "P1": 5
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "03. Dump accumulator to see one notification"
echo "============================================"
accumulatorDump
accumulatorReset
echo
echo


echo "04. See subscription in mongo - make sure ldQ =='P1==5|P2==9', and that q+mq are P&!P"
echo "========================================================================================"
mongoCmd2 ftest "db.csubs.findOne()"
echo
echo


echo "05. Create an Entity E2/T, using POST /v2/entities, matching S5"
echo "==============================================================="
payload='{
  "id": "E2",
  "type": "urn:T",
  "P1": {
    "type": "Property",
    "value": 5
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "06. Dump accumulator to see NO notification"
echo "==========================================="
accumulatorDump
accumulatorReset
echo
echo


echo "07. Kill broker and restart it - to take the sub from mongo and repopulate the sub-cache"
echo "========================================================================================"
brokerStop CB
brokerStart CB 0 IPv4 -experimental
echo
echo


echo "08. Create an Entity E3/T, using POST /ngsi-ld/v1/entities, matching S5"
echo "======================================================================="
payload='{
  "id": "urn:ngsi-ld:entities:T:E3",
  "type": "urn:T",
  "P1": 5
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "09. Dump accumulator to see one notification"
echo "============================================"
accumulatorDump
accumulatorReset
echo
echo


echo "10. Create an Entity E4/T, using POST /v2/entities, matching S5"
echo "==============================================================="
payload='{
  "id": "E4",
  "type": "urn:T",
  "P1": {
    "type": "Property",
    "value": 5
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "11. Dump accumulator to see NO notification"
echo "==========================================="
accumulatorDump
accumulatorReset
echo
echo


