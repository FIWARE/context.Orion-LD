--NAME--
Query condition over observedAt of a Property

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 212-249

--SHELL--

#
# 01. Create an Entity urn:ngsi-ld:T_Query:EntityForQuery2345 with a relationship R100
# 02. Get mongo content
# 03. Query the property P100 over 'observedAt' before 2018-12-04 - see nothing
# 04. Query the property P100 over 'observedAt' after 2018-12-03 - see entity urn:ngsi-ld:T_Query:EntityForQuery2345
# 05. Query the property P100 over 'observedAt' of EXACT 2018-12-04T12:00:00.00Z - see entity urn:ngsi-ld:T_Query:EntityForQuery2345
# 06. Query the property P100 over 'observedAt' of EXACT 2018-12-04T11:00:00.00Z - see nothing
#

echo "01. Create an Entity urn:ngsi-ld:T_Query:EntityForQuery2345 with a relationship R100"
echo "===================================================================================="
payload='{
  "id": "urn:ngsi-ld:T_Query:EntityForQuery2345",
  "type": "T_Query",
  "P100": {
    "type": "Property",
    "value": 12,
    "observedAt": "2018-12-04T12:00:00.00Z",
    "P1_R1": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:T2:6789"
    },
    "P1_P1": {
      "type": "Property",
      "value": 0.79
    }
  },
  "R100": {
    "type": "Relationship",
    "object": "urn:ngsi-ld:T2:6789",
    "R1_R1": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:T3:A2345"
    },
    "R1_P1": {
      "type": "Property",
      "value": false
    }
  },
  "location": {
    "type": "GeoProperty",
    "value": {
      "type": "Point",
      "coordinates": [-30.01, 75.01]
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload"
echo
echo



echo "02. Get mongo content"
echo "====================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "03. Query the property P100 over 'observedAt' before 2018-12-04 - see nothing"
echo "============================================================================="
orionCurl --url '/ngsi-ld/v1/entities?q=P100.observedAt<%222018-12-03%22&prettyPrint=yes&type=T_Query' --noPayloadCheck
echo
echo


echo "04. Query the property P100 over 'observedAt' after 2018-12-03 - see entity urn:ngsi-ld:T_Query:EntityForQuery2345"
echo "=================================================================================================================="
orionCurl --url '/ngsi-ld/v1/entities?q=P100.observedAt>%222018-12-03%22&prettyPrint=yes&type=T_Query' --noPayloadCheck
echo
echo


echo "05. Query the property P100 over 'observedAt' of EXACT 2018-12-04T12:00:00.00Z - see entity urn:ngsi-ld:T_Query:EntityForQuery2345"
echo "=================================================================================================================================="
orionCurl --url '/ngsi-ld/v1/entities?q=P100.observedAt==%222018-12-04T12:00:00.00Z%22&prettyPrint=yes&type=T_Query' --noPayloadCheck
echo
echo


echo "06. Query the property P100 over 'observedAt' of EXACT 2018-12-04T11:00:00.00Z - see nothing"
echo "============================================================================================"
orionCurl --url '/ngsi-ld/v1/entities?q=P100.observedAt==%222018-12-04T11:00:00.00Z%22&prettyPrint=yes&type=T_Query' --noPayloadCheck
echo
echo


