# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
New Batch Upsert - update one entity by adding an attribute

--SHELL-INIT--
export BROKER=orionld
dbInit CB
dbDrop orionld
brokerStart CB 0 IPv4 -experimental

--SHELL--

#
# 01. Create entity urn:ngsi-ld:T:E1, so that the UPSERT in Step 02 Overwrites urn:ngsi-ld:T:E1
# 02. Attempt to Upsert/REPLACE urn:ngsi-ld:T:E1 modifying the Entity Type - see error
# 03. Upsert/REPLACE urn:ngsi-ld:T:E1 - adding P1
# 04. See the entity in mongo
# 05. QUERY for all entites
# 06. GET urn:ngsi-ld:T:E1
#

echo "01. Create entity urn:ngsi-ld:T:E1, so that the UPSERT in Step 02 Overwrites urn:ngsi-ld:T:E1"
echo "============================================================================================="
payload='{
  "id": "urn:ngsi-ld:T:E1",
  "type": "T",
  "P0": {
    "value": 0,
    "unitCode": "CEL"
  }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


echo "02. Attempt to Upsert/REPLACE urn:ngsi-ld:T:E1 modifying the Entity Type - see error"
echo "===================================================================================="
payload='[
  {
    "id": "urn:ngsi-ld:T:E1",
    "type": "T2",
    "P1": {
      "value": 1,
      "unitCode": "CEL"
    }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/upsert --payload "$payload" --out application/ld+json
echo
echo


echo "03. Upsert/Update urn:ngsi-ld:T:E1 - adding P1"
echo "=============================================="
payload='[
  {
    "id": "urn:ngsi-ld:T:E1",
    "type": "T",
    "P1": {
      "value": 1,
      "unitCode": "CEL"
    }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/upsert --payload "$payload" --out application/ld+json
echo
echo


echo "04. See the entity in mongo"
echo "==========================="
mongoCmd2 ftest "db.entities.find().pretty()"
echo
echo


echo "05. QUERY for all entites"
echo "========================="
orionCurl --url '/ngsi-ld/v1/entities?local=true&options=sysAttrs'
echo
echo


echo "06. GET urn:ngsi-ld:T:E1"
echo "========================"
orionCurl --url '/ngsi-ld/v1/entities/urn:ngsi-ld:T:E1?options=sysAttrs'
echo
echo


--REGEXPECT--
01. Create entity urn:ngsi-ld:T:E1, so that the UPSERT in Step 02 Overwrites urn:ngsi-ld:T:E1
=============================================================================================
HTTP/1.1 201 Created
Content-Length: 0
Date: REGEX(.*)
Location: /ngsi-ld/v1/entities/urn:ngsi-ld:T:E1



02. Attempt to Upsert/REPLACE urn:ngsi-ld:T:E1 modifying the Entity Type - see error
====================================================================================
HTTP/1.1 207 Multi-Status
Content-Length: 223
Content-Type: application/json
Date: REGEX(.*)
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"

{
    "created": [],
    "errors": [
        {
            "entityId": "urn:ngsi-ld:T:E1",
            "error": {
                "detail": "the Entity Type cannot be altered",
                "status": 400,
                "title": "Invalid Entity",
                "type": "https://uri.etsi.org/ngsi-ld/errors/BadRequestData"
            }
        }
    ],
    "updated": []
}


03. Upsert/Update urn:ngsi-ld:T:E1 - adding P1
==============================================
HTTP/1.1 207 Multi-Status
Content-Length: 57
Content-Type: application/json
Date: REGEX(.*)
Link: <https://uri.etsi.org/ngsi-ld/v1/ngsi-ld-core-context.jsonld>; rel="http://www.w3.org/ns/json-ld#context"; type="application/ld+json"

{
    "created": [],
    "errors": [],
    "updated": [
        "urn:ngsi-ld:T:E1"
    ]
}


