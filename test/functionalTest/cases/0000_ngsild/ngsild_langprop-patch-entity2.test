# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Entity Patch of a language property

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 0-255 IPv4 -experimental

--SHELL--

#
# 01. POST /ngsi-ld/v1/entities with a language property L
# 02. See the entity in the database
# 03. PATCH the entity, changing L:es to 'Castellano'
# 04. See the entity in the database - make sure L:es is 'Castellano'
# 05. GET entity in Normalized form
# 06. Attempt to PATCH the RHS of L:languageMap to a non-object, e.g. the number 13 - see error
# 07. Attempt to PATCH the RHS of L:languageMap:es to a non-string, e.g. the number 14 - see error
#

echo "01. POST /ngsi-ld/v1/entities with a language property L"
echo "========================================================"
payload='{
  "id": "urn:ngsi-ld:T:E1",
  "type": "T",
  "L": {
    "languageMap": {
      "en": "English",
      "es": "Spanish",
      "sv": "Swedish"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities -X POST --payload "$payload"
echo
echo


echo "02. See the entity in the database"
echo "=================================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "03. PATCH the entity, changing L:es to 'Castellano'"
echo "==================================================="
payload='{
  "L": {
    "languageMap": {
      "es": "Castellano"
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:T:E1 -X PATCH --payload "$payload"
echo
echo


echo "04. See the entity in the database - make sure L:es is 'Castellano'"
echo "==================================================================="
mongoCmd2 ftest "db.entities.findOne()"
echo
echo


echo "05. GET entity in Normalized form"
echo "================================="
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:T:E1
echo
echo


echo "06. Attempt to PATCH the RHS of L:languageMap to a non-object, e.g. the number 13 - see error"
echo "============================================================================================="
payload='{
  "L": {
    "languageMap": 13
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:T:E1 -X PATCH --payload "$payload"
echo
echo


echo "07. Attempt to PATCH the RHS of L:languageMap:es to a non-string, e.g. the number 14 - see error"
echo "================================================================================================"
payload='{
  "L": {
    "languageMap": {
      "es": 14
    }
  }
}'
orionCurl --url /ngsi-ld/v1/entities/urn:ngsi-ld:T:E1 -X PATCH --payload "$payload"
echo
echo


