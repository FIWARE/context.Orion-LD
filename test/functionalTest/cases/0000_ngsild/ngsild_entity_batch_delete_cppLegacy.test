--NAME--
Entity Batch Delete for Mongo Cpp Legacy

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB 212-249

--SHELL--

#
# 01. POST /ngsi-ld/v1/entityOperations/delete - see error
#

echo "01. POST /ngsi-ld/v1/entityOperations/delete - see error"
echo "========================================================"
payload='{
  "entityIds": [
    "id1",
    "id2"
  ]
}'
orionCurl --url /ngsi-ld/v1/entityOperations/delete -X POST --payload "$payload" -H "Content-Type: application/ld+json" -H "Accept: application/ld+json" --linkHeaderFix
echo
echo


--REGEXPECT--
