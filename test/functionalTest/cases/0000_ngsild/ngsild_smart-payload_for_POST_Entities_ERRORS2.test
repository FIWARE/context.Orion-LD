# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Entity Creation using Compact Format and provoking all kinds of errors

--SHELL-INIT--
export BROKER=orionld
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /ngsi-ld/v1/entities, with a Relationship R1 whose object is a Number - see error
#

echo "01. POST /ngsi-ld/v1/entities, with a Relationship R1 whose object is a Number - see error"
echo "=========================================================================================="
payload='{
  "id": "urn:ngsi-ld:entities:E1",
  "type": "T",
  "R1": { "object": 14 }
}'
orionCurl --url /ngsi-ld/v1/entities --payload "$payload"
echo
echo


--REGEXPECT--
01. POST /ngsi-ld/v1/entities, with a Relationship R1 whose object is a Number - see error
==========================================================================================
HTTP/1.1 400 Bad Request
Content-Length: 186
Content-Type: application/json
Date: REGEX(.*)

{
    "detail": "R1",
    "title": "relationship attribute with 'object' field of invalid type (must be a String or an Array or Strings)",
    "type": "https://uri.etsi.org/ngsi-ld/errors/BadRequestData"
}


--TEARDOWN--
brokerStop CB
dbDrop CB
