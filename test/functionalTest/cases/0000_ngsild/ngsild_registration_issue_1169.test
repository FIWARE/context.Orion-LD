  "operationSpace": {
    "type": "Polygon",
    "coordinates": [
      [
        [ 300.0, 0.0 ],
        [ 301.0, 0.0 ],
        [ 301.0, 1.0 ],
        [ 300.0, 1.0 ],
        [ 300.0, 0.0 ]
      ]
    ]
  },
  "expiresAt": "2028-12-31T10:00:01.234Z",
  "endpoint": "http://my.csource.org:1026",
  "scope": "/#",
  "mode": "exclusive",
  "operations": ["retrieveEntity", "updateAttrs"],
  "refreshRate": "PT15S",
  "management": {
    "localOnly": false,
    "cacheDuration": "PT1M",
    "timeout": 5000,
    "cooldown": 15000
