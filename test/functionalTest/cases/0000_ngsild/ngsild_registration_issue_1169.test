  "P1": 1,
  "P2": "2",
  "P3": true,
  "P4": 4.5,
  "P5": {
    "object": 6
  },
  "P6": [ 7, 8 ]
}'
orionCurl --url /ngsi-ld/v1/csourceRegistrations -X POST --payload "$payload" -H "Content-Type: application/ld+json" --linkHeaderFix
echo
echo


echo "02. See registration in mongo"
echo "============================="
mongoCmd2 ftest "db.registrations.findOne()"
echo
echo


