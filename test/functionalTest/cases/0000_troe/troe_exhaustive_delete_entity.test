# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Exhaustive tests of Deletion of entities for TRoE

--SHELL-INIT--
export BROKER=orionld
dbInit CB
dbInit CB t1
pgInit $CB_DB_NAME
