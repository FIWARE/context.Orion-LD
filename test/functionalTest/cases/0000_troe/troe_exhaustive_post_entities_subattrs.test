  "id": "urn:ngsi-ld:entity:E1",
  "type": "Device",
  "owner": {
    "type": "Property",
    "value": "Peter Farmer",
    "unitCode": "kg1",
    "createdAt":  "2021-03-07T08:30:01.123Z",
    "modifiedAt": "2021-03-07T08:30:02.123Z",
