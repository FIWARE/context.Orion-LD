{
    "errors": [
        {
            "entityId": "urn:ngsi-ld:entity:E1",
            "error": {
                "status": 400,
                "title": "Content-Type is 'application/json', and an @context is present in the payload data array item",
                "type": "https://uri.etsi.org/ngsi-ld/errors/BadRequestData"
