# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Batch Deletion of entities

--SHELL-INIT--
export BROKER=orionld
dbInit CB
pgInit $CB_DB_NAME
brokerStart CB 100 IPv4 -troe

--SHELL--

#
# 01. Create three entities, E1, E2, and E3
# 02. Delete E1 and E3 using Batch Delete
# 03. See the entities in the temporal database
# 04. Attempt to delete E2 twice
# 05. See the entities in the temporal database - E2 should be deleted only once in TRoE
#

echo "01. Create three entities, E1, E2, and E3"
echo "========================================="
payload='[
  {
    "id": "urn:ngsi-ld:entities:E1",
    "type": "T",
    "SP": {
      "type": "Property",
      "value": "SP of E1",
      "observedAt": "2020-12-10T07:11:00.123Z"
    }
  },
  {
    "id": "urn:ngsi-ld:entities:E2",
    "type": "T",
    "SP": {
      "type": "Property",
      "value": "SP of E2"
    }
  },
  {
    "id": "urn:ngsi-ld:entities:E3",
    "type": "T",
    "R1": {
      "type": "Relationship",
      "object": "urn:ngsi-ld:relationships:R1"
    }
  }
]'
orionCurl --url /ngsi-ld/v1/entityOperations/create --payload "$payload"
echo
echo


echo "02. Delete E1 and E3 using Batch Delete"
echo "======================================="
payload='[
  "urn:ngsi-ld:entities:E1",
  "urn:ngsi-ld:entities:E3"
]'
orionCurl --url /ngsi-ld/v1/entityOperations/delete --payload "$payload"
echo
echo


echo "03. See the entities in the temporal database"
echo "============================================="
postgresCmd -sql "SELECT opMode,id,type,ts FROM entities"
echo
echo


echo "04. Attempt to delete E2 twice"
echo "=============================="
payload='[
  "urn:ngsi-ld:entities:E2",
  "urn:ngsi-ld:entities:E2"
]'
orionCurl --url /ngsi-ld/v1/entityOperations/delete --payload "$payload"
echo
echo


echo "05. See the entities in the temporal database - E2 should be deleted only once in TRoE"
echo "======================================================================================"
postgresCmd -sql "SELECT opMode,id,type,ts FROM entities"
echo
echo


--REGEXPECT--
01. Create three entities, E1, E2, and E3
=========================================
HTTP/1.1 201 Created
Content-Length: 79
Content-Type: application/json
Date: REGEX(.*)

[
    "urn:ngsi-ld:entities:E1",
    "urn:ngsi-ld:entities:E2",
    "urn:ngsi-ld:entities:E3"
]


02. Delete E1 and E3 using Batch Delete
=======================================
HTTP/1.1 204 No Content
Date: REGEX(.*)



03. See the entities in the temporal database
=============================================
opmode,id,type,ts
Create,urn:ngsi-ld:entities:E1,https://uri.etsi.org/ngsi-ld/default-context/T,REGEX(202.*)
Create,urn:ngsi-ld:entities:E2,https://uri.etsi.org/ngsi-ld/default-context/T,REGEX(202.*)
Create,urn:ngsi-ld:entities:E3,https://uri.etsi.org/ngsi-ld/default-context/T,REGEX(202.*)
Delete,urn:ngsi-ld:entities:E1,NULL,REGEX(202.*)
Delete,urn:ngsi-ld:entities:E3,NULL,REGEX(202.*)


04. Attempt to delete E2 twice
==============================
HTTP/1.1 204 No Content
Date: REGEX(.*)



05. See the entities in the temporal database - E2 should be deleted only once in TRoE
======================================================================================
opmode,id,type,ts
Create,urn:ngsi-ld:entities:E1,https://uri.etsi.org/ngsi-ld/default-context/T,REGEX(202.*)
Create,urn:ngsi-ld:entities:E2,https://uri.etsi.org/ngsi-ld/default-context/T,REGEX(202.*)
Create,urn:ngsi-ld:entities:E3,https://uri.etsi.org/ngsi-ld/default-context/T,REGEX(202.*)
Delete,urn:ngsi-ld:entities:E1,NULL,REGEX(202.*)
Delete,urn:ngsi-ld:entities:E3,NULL,REGEX(202.*)
Delete,urn:ngsi-ld:entities:E2,NULL,REGEX(202.*)


--TEARDOWN--
brokerStop CB
dbDrop CB
